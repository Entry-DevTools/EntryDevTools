{
	"extends": "eslint:recommended",
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"jquery": true,
		"webextensions": true
	},
	"parserOptions": {
		"ecmaVersion": 2020
	},
	"rules": {
		"comma-dangle": ["error", "always-multiline"],
		"comma-spacing": "error",
		"comma-style": "error",
		"max-nested-callbacks": ["error", { "max": 6 }],
		"max-statements-per-line": ["error", { "max": 2 }],
		"no-console": "off",
		"no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 1, "maxBOF": 0 }],
		"no-var": "error",
		"prefer-const": "error",
		"quotes": ["error", "single"],
		"semi": [2, "always"]
	}
}